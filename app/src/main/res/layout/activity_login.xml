<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_tab_right_on"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_centerInParent="true"
            android:src="@drawable/loading_logo" />

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <EditText
                android:id="@+id/inputId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:hint="사내 이메일"
                android:textColorHint="#ffffff"
                />

            <EditText
                android:id="@+id/inputPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:hint="비밀번호"
                android:textColorHint="#ffffff"
               />
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button

        android:id="@+id/loginBtn"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_view_blue"
        android:text="Login"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:hint="회원 관리 비밀번호 입력"
        android:textColorHint="#ffffff"
        />

    <Button

        android:id="@+id/changeBtn"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_view_gray"
        android:text="회원 관리"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button

        android:id="@+id/changeBtnhidden"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_view_gray"
        android:text="회원 관리 종료"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</LinearLayout>





        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
